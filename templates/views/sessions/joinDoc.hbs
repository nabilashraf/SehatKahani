{{!< default}}

<div class="container-md">
  <div class="page-intro">
    <h2 class="text-center">Hi , Welcome to Sehat Kahani!</h2>
    <h5 class="text-center"><b>Sehat Kahani</b> allows Doctors to effectively manage and interact with patients globally.</h5>
    <p class="text-center">Fill in your details to get started</p>
  </div>
  <hr class="mv-2"/>
  <div class="col-sm-8 col-sm-offset-2">
    <div class="alert alert-info text-center"><b>We are registering all Doctors </b></div>
    <form method="post" enctype="multipart/form-data" autocomplete="off" novalidate="novalidate" class="form-horizontal">
      <input type="hidden" name="action" value="joinDoc"/>
      <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="form-row">
          <div class="col-sm-4">
            <input type="text" name="firstname" placeholder="First Name" required="required" class="form-control"/>
          </div>
          <div class="col-sm-4">
            <input type="text" name="lastname" placeholder="Last Name" required="required" class="form-control"/>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Email</label>
        <div class="col-sm-8">
          <input type="email" name="email" placeholder="yourname@domain.com" required="required" class="form-control"/>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Password</label>
        <div class="col-sm-8">
          <input type="password" name="password" placeholder="password" required="required" class="form-control"/>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Speciality </label>
        <div class="col-sm-8">
          <select name="speciality" selected="" required="required" class="form-control">
            <option value="">Select from dropdown</option>
            <option value="Cardiology">Cardiology</option>
            <option value="Neurology"> Neurology</option>
            <option value="Pathology"> Pathology</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Medical Number</label>
        <div class="col-sm-8">
          <input type="number" name="medno" placeholder="Your Registered Medical Number" required="required" class="form-control"/>
        </div>
      </div>
      <div class="row">
        <div class="div col-md-6 col-md-offset-4">
          <button type="submit" data-loading-text="Sending..." class="btn btn-primary btn btn-md">Become a Member</button>
        </div>
      </div>
    </form>
  </div>
</div>